{
  "builds": [
    {
      "name": "backend",
      "directory": "server",
      "watch": ["server/**"],
      "installCommand": "cd server && npm install",
      "buildCommand": "cd server && npm run build",
      "runCommand": "cd server && npm start"
    },
    {
      "name": "frontend",
      "directory": "client",
      "watch": ["client/**"],
      "installCommand": "cd client && npm install",
      "buildCommand": "cd client && npm run build",
      "runCommand": "cd client && npm run preview"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "frontend",
      "continue": true
    }
  ]
}